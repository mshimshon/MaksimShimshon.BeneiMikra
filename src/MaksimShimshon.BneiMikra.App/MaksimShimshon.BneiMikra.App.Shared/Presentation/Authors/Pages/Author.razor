@inherits ComponentBase
@page "/author/{Id}"
@using MaksimShimshon.BneiMikra.App.Shared.Shared.Resources

<PageTitle>@($"B'nei Mikra - ")</PageTitle>
<MudGrid>

    <MudItem xs="10">
        @if (_viewModel.IsLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />

        }
        else if (_viewModel.ViewState.Result?.Biography != default)
        {
            <MudText Typo=@Typo.h5>
                @_viewModel.ViewState.Result.Name
            </MudText>
            <Divider VerticalSpacing="1em" DividerType=@DividerType.Middle />
            <ArticleBlockRenderer Blocks=@_viewModel.ViewState.Result.Biography.Blocks />
        }
        else
        {
            <MudText Typo=@Typo.body1>
                @_viewModel.ApplicationResourceProvider.GetString(() => ApplicationResource.GenericIncompleSection)
            </MudText>
        }

    </MudItem>
</MudGrid>
