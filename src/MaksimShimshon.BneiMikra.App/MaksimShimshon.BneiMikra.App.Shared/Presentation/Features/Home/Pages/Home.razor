@inherits ComponentBase
@page "/"

<PageTitle>@("B'nei Mikra - Home")</PageTitle>

<MudGrid>
    @if (_viewModel.IsLoading)
    {
        <MudItem xs="12">
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        </MudItem>

    }
    else if (_viewModel.LatestArticles.Result != default && _viewModel.LatestArticles.Result.Result.Count > 0)
    {
        @foreach (var item in _viewModel.LatestArticles.Result.Result)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <ArticleLiteItem Data=item />
            </MudItem>
        }
    }
    else
    {
        <MudItem xs="12">
            <MudText>
                @AppResourceProvider.GetString(() => ApplicationResource.HttpStatusNotFoundDescription)
            </MudText>
        </MudItem>
    }
</MudGrid>