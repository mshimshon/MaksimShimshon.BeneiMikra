@using MaksimShimshon.BneiMikra.App.Shared.Infrastructure
@using MaksimShimshon.BneiMikra.App.Shared.Infrastructure.Contracts
@using MaksimShimshon.BneiMikra.App.Shared.Infrastructure.Contracts.Shared
@using MaksimShimshon.BneiMikra.App.Shared.Infrastructure.Contracts.Shared.Blocks
@using MaksimShimshon.BneiMikra.App.Shared.Infrastructure.Contracts.Tanakh
@foreach (var block in Blocks)
{
    <DynamicBlock TEntity=@(BlockMarkdownResponse) BlockResp=@block WhenComponent="shared.rich-text">
        <MudMarkdown Value=@context.Body />
    </DynamicBlock>

    <DynamicBlock TEntity=@(BlockQuotationResponse) BlockResp=@block WhenComponent="shared.quote">
        <Quotation Cite=@context.Title Quote=@context.Body />
    </DynamicBlock>

    <DynamicBlock TEntity=@(TanakhReferenceResponse) BlockResp=@block WhenComponent="shared.tanakh-reference">
        @if (context.DirectPrint)
        {

            <TanakhReferencePrint BookName=@context.Book Chapiter=@context.Chapiter Verse=@context.Verse Note=@context.Note />
        }
        else
        {
            <TanakhReference Data=@context />
        }
    </DynamicBlock>
}