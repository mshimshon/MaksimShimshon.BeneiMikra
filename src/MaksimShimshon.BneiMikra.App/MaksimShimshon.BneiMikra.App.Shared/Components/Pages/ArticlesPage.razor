@inherits ComponentBase
@page "/articles"

<PageTitle>@("B'nei Mikra - Home")</PageTitle>
<MudGrid>
@if (SearchState.IsLoading)
{
    <MudItem xs="12">
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    </MudItem>
}else if (SearchState.Result != default)
{
    @if (SearchState.Result.Result.Count <= 0)
    {
        <MudItem xs="12">
            <MudText>
                @AppResourceProvider.GetString(()=> ApplicationResource.HttpStatusNotFoundDescription)
            </MudText>
        </MudItem>
    }
    else
    {
        @foreach (var item in SearchState.Result.Result)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <ArticleLiteItem Data=item />
            </MudItem>
        }
    }
}
else
{
    <MudItem xs="12">
        <MudText>
            @AppResourceProvider.GetString(() => ApplicationResource.HttpStatusNotFoundDescription)
        </MudText>
    </MudItem>
}

</MudGrid>