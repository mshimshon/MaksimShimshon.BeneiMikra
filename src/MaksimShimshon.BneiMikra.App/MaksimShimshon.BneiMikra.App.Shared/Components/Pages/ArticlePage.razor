@inherits ComponentBase
@page "/article/{Id}"

<PageTitle>@($"B'nei Mikra - {Id}")</PageTitle>
<MudGrid Justify=@Justify.Center>
    @if (ArticleState.IsLoading)
    {
        <MudItem xs="12">
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        </MudItem>
    }
    else if (ArticleState.Result != default)
    {
        <MudItem xs="12" md="6">
            <MudText Align=@Align.Center Typo=Typo.h3>@ArticleState.Result.Title</MudText>
            <MudText Align=@Align.Center Typo=Typo.body1>@ArticleState.Result.Description</MudText>
        </MudItem>
        <MudFlexBreak/>
        <MudItem md="6">
            <ArticleBlockRenderer Blocks=@ArticleState.Result.Blocks />
        </MudItem>
    }
    else
    {
        <MudItem xs="12">
            <MudText>
                @AppResourceProvider.GetString(() => ApplicationResource.HttpStatusNotFoundDescription)
            </MudText>
        </MudItem>
    }
</MudGrid>
