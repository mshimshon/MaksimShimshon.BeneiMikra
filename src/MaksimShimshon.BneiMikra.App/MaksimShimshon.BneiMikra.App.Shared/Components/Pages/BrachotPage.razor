@inherits ComponentBase
@page "/brachot"

<PageTitle>@("B'nei Mikra - Blessings")</PageTitle>

<MudGrid>
    @if (ListingState.IsLoading)
    {
        <MudItem xs="12">
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        </MudItem>
    }
    else if (ListingState.Result != default && ListingState.Result.Count >0)
    {
        @foreach (var item in ListingState.Result)
        {
            <MudItem xs="12" sm="6">
                <BrachaLiteItem Data=@item />
            </MudItem>
        }
    }
    else
    {
    <MudItem xs="12">
        <MudText>
            @AppResourceProvider.GetString(() => ApplicationResource.HttpStatusNotFoundDescription)
        </MudText>
    </MudItem>
    }
</MudGrid>