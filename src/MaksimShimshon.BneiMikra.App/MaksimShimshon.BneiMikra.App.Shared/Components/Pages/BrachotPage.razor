@inherits FluxorComponent
@page "/brachot"

<PageTitle>@("B'nei Mikra - Blessings")</PageTitle>

<MudGrid>
    @if (!ListingState.Value.IsLoading)
    {
        @if (ListingState.Value.Result != default)
        {
            @foreach (var item in ListingState.Value.Result)
            {
                <MudItem xs="12" sm="6" >
                    <BrachaLiteItem Data=@item />
                </MudItem>
            }
        }
    }
    else
    {
        <MudItem xs="12">
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        </MudItem>
    }
</MudGrid>