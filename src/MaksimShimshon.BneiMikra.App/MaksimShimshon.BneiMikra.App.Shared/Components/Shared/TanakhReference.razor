@inherits FluxorComponent
<MudPaper Class="pa-4">
    <MudStack Spacing="2">
        <MudButtonGroup >
            <MudButton  OnClick=OnExpandCollapseClick>
                @BookRefName
            </MudButton>
            <MudButton OnClick=OpenDialog>
                @AppResourceProvider.GetString(() => ApplicationResource.TanakhReferenceSeeRefButton)
            </MudButton>
        </MudButtonGroup>
        @if (!string.IsNullOrWhiteSpace(Data.Note))
        {
            <MudDivider />
            <MudCollapse Expanded=@Expanded> @Data.Note </MudCollapse>
        }

    </MudStack>
</MudPaper>